{
  "name": "coin-trading-journal-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "trading-engine"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && ./gradlew bootRun",
    "dev:trading": "cd trading-engine && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:trading\"",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "cd backend && ./gradlew build",
    "build:trading": "cd trading-engine && docker build -t trading-engine .",
    "build:all": "npm run build:frontend && npm run build:backend && npm run build:trading",
    "start": "npm run start --workspace=frontend",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "cd backend && ./gradlew bootRun",
    "start:trading": "cd trading-engine && python main.py",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "lint": "npm run lint --workspace=frontend",
    "lint:fix": "npm run lint:fix --workspace=frontend",
    "type-check": "npm run type-check --workspace=frontend",
    "install:all": "npm install && npm install --workspace=frontend",
    "clean": "npm run clean --workspace=frontend && cd backend && ./gradlew clean"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openai": "^5.12.2"
  }
}
